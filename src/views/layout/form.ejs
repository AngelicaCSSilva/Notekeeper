<form method="post" action="<%= url %>" >
  <div class="field">
    <label class="label">Title</label>
    <div class="control">
        value="<%= notes.title %>"
      <p class="is-danger help">Title should be present</p>
    </div>
    <label class="label">Note</label>
    <div class="control">
      <input class="input" type="text" name="note" placeholder="Note...">
      <p class="is-danger help">Note should be present</p>
    </div>
  </div>
  <button type="submit" class="button is-success">Salvar</button>
  <a href="/" class="button">Cancelar</a>
</form>